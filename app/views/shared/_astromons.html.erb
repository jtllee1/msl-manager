<div class="astromon-cards">
  <% astromons.each do |astromon| %>
    <% @first_gem = Astromon.first_gem(astromon) %>
    <% @second_gem = Astromon.second_gem(astromon) %>
    <% @third_gem = Astromon.third_gem(astromon) %>
    <% hp_sum = Astromon.stat_sum(@first_gem, @second_gem, @third_gem, "hp") %>
    <% gem_hp = Astromon.gem_stat(astromon, "hp") %>
    <% attack_sum = Astromon.stat_sum(@first_gem, @second_gem, @third_gem, "attack") %>
    <% gem_attack = Astromon.gem_stat(astromon, "attack") %>
    <% defence_sum = Astromon.stat_sum(@first_gem, @second_gem, @third_gem, "defence") %>
    <% gem_defence = Astromon.gem_stat(astromon, "defence") %>
    <% recovery_sum = Astromon.stat_sum(@first_gem, @second_gem, @third_gem, "recovery") %>
    <% gem_recovery = Astromon.gem_stat(astromon, "recovery") %>
    <% crit_dmg_sum = Astromon.stat_sum(@first_gem, @second_gem, @third_gem, "crit_dmg") %>
    <% gem_crit_dmg = Astromon.gem_stat(astromon, "crit_dmg") %>
    <% crit_rate_sum = Astromon.stat_sum(@first_gem, @second_gem, @third_gem, "crit_rate") %>
    <% gem_crit_rate = Astromon.gem_stat(astromon, "crit_rate") %>
    <% resist_sum = Astromon.stat_sum(@first_gem, @second_gem, @third_gem, "resist") %>
    <% gem_resist = Astromon.gem_stat(astromon, "resist") %>
    <% flat = Astromon.flat(astromon) %>
    <div class="astromon-card">
      <div class="astromon-data">
        <div class="astromon-pic">
          <p style="color: blanchedalmond;"><%= astromon.specie.name %></p>
          <%= image_tag astromon.specie.pic, alt: astromon.specie.name %>
        </div>
        <div class="stat inner-border">
          <div class="stat-name">
            <p>HP: <%= astromon.specie.hp %></p>
            <p>Attack: <%= astromon.specie.attack %></p>
            <p>Defence: <%= astromon.specie.defence %></p>
            <p>Recovery: <%= astromon.specie.recovery %></p>
            <p>Crit. Dmg: <%= astromon.specie.crit_dmg %>%</p>
            <p>Crit. Rate: <%= astromon.specie.crit_rate %>%</p>
            <p>Resist: <%= astromon.specie.resist %>%</p>
          </div>
          <div class="stat-boost">
            <p>+<%= hp_sum %>%</p>
            <p>+<%= attack_sum %>%</p>
            <p>+<%= defence_sum %>%</p>
            <p>+<%= recovery_sum %>%</p>
            <p>+<%= crit_dmg_sum %>%</p>
            <p>+<%= crit_rate_sum %>%</p>
            <p>+<%= resist_sum %>%</p>
          </div>
          <div class="stat-gem">
            <p>+<%= gem_hp %><%= flat %></p>
            <p>+<%= gem_attack %><%= flat %></p>
            <p>+<%= gem_defence %><%= flat %></p>
            <p>+<%= gem_recovery %><%= flat %></p>
            <p>+<%= gem_crit_dmg %><%= flat %></p>
            <p>+<%= gem_crit_rate %><%= flat %></p>
            <p>+<%= gem_resist %><%= flat %></p>
          </div>
          <div class="total-stat">
            <p><%= astromon.specie.hp + Astromon.final_stat(astromon, astromon.specie.hp, hp_sum, gem_hp) %></p>
            <p><%= astromon.specie.attack + Astromon.final_stat(astromon, astromon.specie.attack, attack_sum, gem_attack) %></p>
            <p><%= astromon.specie.defence + Astromon.final_stat(astromon, astromon.specie.defence, defence_sum, gem_defence) %></p>
            <p><%= astromon.specie.recovery + Astromon.final_stat(astromon, astromon.specie.recovery, recovery_sum, gem_recovery) %></p>
            <p><%= astromon.specie.crit_dmg + crit_dmg_sum + gem_crit_dmg %>%</p>
            <p><%= astromon.specie.crit_rate + crit_rate_sum + gem_crit_rate %>%</p>
            <p><%= astromon.specie.resist + resist_sum + gem_resist %>%</p>
          </div>
        </div>
        <div class="skill inner-border">
          <p><%= astromon.specie.first_skill.skill.name %></p>
             <div class="outer-skill">
               <div class="img">
                <%= image_tag astromon.specie.first_skill.skill.pic, alt: astromon.specie.first_skill.skill.name %>
               </div>
               <div class="desc">
                <%= astromon.specie.first_skill.skill.description %>
               </div>
             </div>
          <p><%= astromon.specie.second_skill.skill.name %></p>
             <div class="outer-skill">
               <div class="img">
                <%= image_tag astromon.specie.second_skill.skill.pic, alt: astromon.specie.second_skill.skill.name %>
               </div>
               <div class="desc">
                <%= astromon.specie.second_skill.skill.description %>
               </div>
             </div>
        </div>
        <% if astromon.variant_level %>
          <div class="leader inner-border">
            <p><%= astromon.specie.variant_skill.name %> Lv. <%= astromon.variant_level %></p>
            <div class="outer-skill">
              <div class="img">
                <%= image_tag astromon.specie.variant_skill.pic, alt: astromon.specie.variant_skill.name %>
              </div>
              <div class="desc">
                <%= astromon.specie.variant_skill.description %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="astromon-gem">
        <div class="gem-cards">
          <% unless @first_gem %>
            <%= link_to new_astromon_first_gem_path(astromon) do %>
              <div class="gem-card inner-border add-gem">
                <p>Add First Gem</p>
              </div>
            <% end %>
          <% else %>
            <%= render "shared/astromon-gems", msl_gem: @first_gem.msl_gem %>
            <%= link_to astromon_first_gem_path(id: @first_gem.id, astromon_id: astromon.id), method: :delete, data: { confirm: "Are you sure?" } do %>
              <i class="fa fa-trash"></i>
            <% end %>
          <% end %>
          <% unless @second_gem %>
            <%= link_to new_astromon_second_gem_path(astromon) do %>
              <div class="gem-card inner-border add-gem">
                <p>Add Second Gem</p>
              </div>
            <% end %>
          <% else %>
            <%= render "shared/astromon-gems", msl_gem: @second_gem.msl_gem %>
            <%= link_to astromon_second_gem_path(id: @second_gem.id, astromon_id: astromon.id), method: :delete, data: { confirm: "Are you sure?" } do %>
              <i class="fa fa-trash"></i>
            <% end %>
          <% end %>
          <% unless @third_gem %>
            <%= link_to new_astromon_third_gem_path(astromon) do %>
              <div class="gem-card inner-border add-gem">
                <p>Add Third Gem</p>
              </div>
            <% end %>
          <% else %>
            <%= render "shared/astromon-gems", msl_gem: @third_gem.msl_gem %>
            <%= link_to astromon_third_gem_path(id: @third_gem.id, astromon_id: astromon.id), method: :delete, data: { confirm: "Are you sure?" } do %>
              <i class="fa fa-trash"></i>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
