<div class="gem-card inner-border">
  <div class="gem-left">
    <div class="gem-pic">
      <div class="Trinket-bg">
        <div class="Trinket">
        </div>
      </div>
    </div>
    <div class="gem-desc">
      <p><b>Magicite</b></p>
    </div>
  </div>
  <div class="gem-right">
    <div class="main-stat">
      <% unless trinket.m_attack == 0 %>
          <p><b>Attack: <%= trinket.m_attack %></b></p>
      <% end %>
    </div>
    <div class="sub-stat">
      <% unless trinket.s_crit_dmg == 0 %>
          <p>Crit. Dmg: <%= trinket.s_crit_dmg %>%</p>
      <% end %>

      <% unless trinket.s_resist == 0 %>
          <p>Resist: <%= trinket.s_resist %>%</p>
      <% end %>

      <% unless trinket.s_recovery == 0 %>
          <p>Recovery: <%= trinket.s_recovery %></p>
      <% end %>
    </div>
  </div>
  <% if trinket.second_trinket %>
    <div class="equipped-astromon-trinket <%= status %>">
      <%= image_tag trinket.second_trinket.astromon.specie.pic, alt: trinket.second_trinket.astromon.specie.name %>
    </div>
  <% end %>
</div>
