<div class="container new-form inner-border">
  <h3>Add Trinket</h3>
  <%= simple_form_for @trinket_one do |f| %>
    <div class="stat">
      <div class="main">
        <h5>Main Stat</h5>
        <%= f.input :m_hp, :label => "HP" %>
      </div>
      <div class="sub">
        <h5>Sub Stat</h5>
        <%= f.input :s_defence, :label => "Defence" %>
        <%= f.input :s_recovery, :label => "Recovery" %>
        <%= f.input :s_crit_res, :label => "Crit. Res" %>
      </div>
    </div>
    <%= f.submit "Add Trinket", class:"button" %>
  <% end %>
  <%= link_to trinkets_path do %>
    <button class="button">Back</button>
  <% end %>
</div>
