<%= simple_form_for @msl_gem do |f| %>
  <%= f.input :gem_shape, as: :select, collection: ["Square", "Triangle", "Diamond"], prompt: "Select Gem Shape" %>
  <%= f.association :gem_category %>
  <%= f.input :m_hp %>
  <%= f.input :m_attack %>
  <%= f.input :m_defence %>
  <%= f.input :m_recovery %>
  <%= f.input :m_crit_dmg %>
  <%= f.input :m_crit_rate %>
  <%= f.input :m_resist %>
  <%= f.input :s_hp %>
  <%= f.input :s_attack %>
  <%= f.input :s_defence %>
  <%= f.input :s_recovery %>
  <%= f.input :s_crit_dmg %>
  <%= f.input :s_crit_rate %>
  <%= f.input :s_resist %>
  <%= f.submit "Add Gem" %>
<% end %>
