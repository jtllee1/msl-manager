<div class="container new">
  <%= simple_form_for([@astromon, @first_trinket]) do |f| %>
    <div class="gem-cards">
      <% @first_trinkets.each do |trinket| %>
        <% if trinket.available %>
          <label>
            <%= check_box_tag "trinket", trinket.id, false, class: "invisible" %>
            <%= render "shared/astromon-trinkets-one", trinket: trinket %>
          </label>
        <% end %>
      <% end %>
    </div>
    <%= f.submit "Add First Trinket", class: "button" %>
    <%= link_to "Back", astromons_path, class: "button" %>
  <% end %>
</div>
